        <!--inherited form: account.asset-->
        <record id="asset_aditional_form_view" model="ir.ui.view">
            <field name="name">asset_aditional_form_view</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='model_id']" position="after">
                        <field name="barcode" readonly="1"/>
                        <field name="label" invisible="1"/>
                    </xpath>
                    <xpath expr="//field[@name='prorata_computation_type']" position="after">
                        <field name="sequence_id" attrs="{'invisible':[('state','!=','model')]}"/>
                    </xpath>
                    <xpath expr="//page[@name='main_page']/group" position="inside">
                        <group string="Otros datos" name="sv_info" attrs="{'invisible':[('state','=','model')]}">
                            <field name="responsible"/>
                            <field name="area"/>
                            <field name="size"/>
                            <field name="notes"/>
                        </group>
                    </xpath>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="action_create_barcode" type="object" icon="fa-cube" string="Asignar código"/>
                        <button name="print_label" string="imprimir" icon="fa-print" type="object" attrs="{'invisible':['|',('barcode','=',False),('label','=',False)]}"/>
                    </xpath>
                </data>
            </field>
        </record>

