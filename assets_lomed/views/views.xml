        <!--Accion de ventana asset.report.wizard-->
        <record model="ir.actions.act_window" id="asset_report_wizard_action">
            <field name="name">Reporte de activos</field>
            <field name="res_model">assets.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!--Elemento de menú asset.report.wizard-->
        <!--account.menu_finance_entries_management,account.account_reports_management_menu-->
        <menuitem id="asset_report_wizard_menu" 
        parent="account.menu_finance_entries_management"
        name="Informe de activos" 
        action="asset_report_wizard_action" 
        sequence="100"/>

        <!--Form view for report wizard-->
        <record id="asset_report_wizard_form_view" model="ir.ui.view">
            <field name="name">asset_report_wizard_form_view</field>
            <field name="model">assets.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Asset report">
                    <sheet>
                        <group string="Generar reporte de activo">
                            <field name="month"/>
                            <field name="year"/>
                            <field name="include_all" widget="boolean_toggle"/>
                        </group>
                        <footer>
                            <button name="action_print_report" type="object" string="Generar reporte" class="btn btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
