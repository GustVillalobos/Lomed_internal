<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Inherited form for res.partner-->
        <record id="discount_rule_partner_form_view" model="ir.ui.view">
            <field name="name">discount_rule_partner_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" type="object" name="action_show_rules" groups="discount_rule.group_discount_rule" icon="fa-cart-arrow-down" string="Descuentos"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>