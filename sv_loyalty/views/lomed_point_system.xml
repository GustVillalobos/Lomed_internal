<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Accion de ventana wizard-->
        <record model="ir.actions.act_window" id="op_wizard_create_order_action">
            <field name="name">Calcular puntos ganados</field>
            <field name="res_model">op.wizard.create_order</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <!--Formulario wizard crear orden-->
        <record model="ir.ui.view" id="wizard_compute_point_form_view">
            <field name="name">wizard_compute_point_form_view</field>
            <field name="model">loyalty.plan.resume_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <p class="oe_grey">
                        Aqui podra consultar el calculo de los puntos obtenidos segun condicion del plan asociado al contacto.
                    </p>
                    <div class="oe_title">
                        <h1><field name="partner_id" readonly="1"/></h1>
                    </div>
                    <group name="header_data">
                        <field name="month"/>
                        <field name="year"/>
                        <button name="print_point_report" colspan="2" type="object" string="Imprimir reporte" class="btn btn-primary" attrs="{'invisible':[('points_result','=',False)]}"/>
                    </group>
                    <notebook>
                        <page name="results" string="Puntos obtenidos">
                            <group>
                                <field name="points_result" colspan="2" nolabel="1"/>
                            </group>
                        </page>
                        <page name="order_list" string="Ordenes incluidas">
                            <field name="order_ids" nolabel="1" colspan="2">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="partner_id"/>
                                    <field name="paciente"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_get_points" type="object" string="Calcular puntos" class="btn btn-primary" data-hotkey="q"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>